@page
@model Shop.UI.Pages.Admin.IndexModel
@{
}


<div id="app">
    @* anything in this app element, VUE will knows  *@

    <input type="number" @@ v-model="price" @@change="alert('hello')" />
    <button v-on:click="togglePrice">Toggle Price</button>
    <p @@ v-show="showPrice">
        {{price}}
    </p>
    <p @@ v-if="showPrice">
        {{formatPrice}}
    </p>
    @* above is vue directive, the input bind to the model, v-show is true then generate the DOM otherwise not, it is like angular *@

</div>

@section scripts{
    <script src="https://cdn.jsdelivr.net/npm/vue@2.7.8/dist/vue.js"></script>
    <script src="~/js/admin/main.js"></script>
    @* make sure you js file come after vue.js lib, otherwise system cannot find the object *@
 }

